<?xml version="1.0" encoding="UTF-8"?>
<digester-rules>
  <pattern value="manifest">
    <factory-create-rule classname="nl.toolforge.karma.core.manifest.digester.ManifestCreationFactory"/>
    <set-properties-rule/>
  </pattern>
  <pattern value="*/module">
    <factory-create-rule classname="nl.toolforge.karma.core.manifest.digester.ModuleDescriptorCreationFactory"/>
    <set-properties-rule/>
    <alias attr-name="version" prop-name="version"/>
    <set-next-rule methodname="addModule" paramtype="nl.toolforge.karma.core.manifest.ModuleDescriptor"/>
  </pattern>
  <pattern value="*/include-manifest">
    <object-create-rule classname="nl.toolforge.karma.core.manifest.ManifestDescriptor"/>
    <set-properties-rule/>
    <set-next-rule methodname="includeManifest"/>
  </pattern>
</digester-rules>