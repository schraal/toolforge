<?xml version="1.0" encoding="UTF-8"?>

<project name="karma" default="none">

  <target name="none">

    <!-- Nothing -->

  </target>

  <target name="jar" depends="compile" >

    <!-- Remove all jar-files -->
    <delete dir="${jar-base-dir}" includes="*.jar"/>

    <jar destfile="${jar-file-name}" basedir="${jar-base-dir}"/>

  </target>

  <target name="compile">

    <mkdir dir="${javac-destination-dir}"/>

    <javac destdir="${javac-destination-dir}" srcdir="${javac-source-dir}" classpath="${javac-classpath}"/>

  </target>

  <target name="war">

    <war destfile="${war-destination-file}"/> 

  </target>

</project>