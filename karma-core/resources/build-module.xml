<?xml version="1.0" encoding="UTF-8"?>

<project name="karma" default="none">

  <target name="none">

    <!-- Nothing -->

  </target>

  <target name="jar" depends="compile" >

    <jar jarfile="${jar-file}" basedir="${destination-dir}"/>

  </target>

  <target name="compile">

    <mkdir dir="${destination-dir}"/>

    <javac destdir="${destination-dir}" srcdir="${source-dir}"/>

  </target>

</project>