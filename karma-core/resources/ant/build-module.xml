<?xml version="1.0" encoding="UTF-8"?>

<project name="build-module" default="run">

  <target name="run">

    <!-- debug -->
    <echo level="debug" message="module-build-dir: ${module-build-dir}"/>
    <echo level="debug" message="classpath: ${classpath}"/>
    <echo level="debug" message="module-source-dir: ${module-source-dir}"/>

    <!-- Remove the old jar file(s). -->
    <delete>
      <fileset dir="${module-build-dir}">
        <include name="*.jar"/>
      </fileset>
    </delete>

    <!-- Compile all sources -->
    <javac
      destdir="${module-build-dir}"
      classpath="${classpath}"
      source="1.4"
      includes="**/*.java"
      compiler="modern"
      debug="true">

      <src path="${module-source-dir}"/>

    </javac>

  </target>

</project>